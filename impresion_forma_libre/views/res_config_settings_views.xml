<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_inherit_impresion_forma_libre" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='invoicing_settings']" position="inside">
        <div class="col-12 col-lg-6 o_setting_box" id="default_freeform_format">
          <div class="o_setting_left_pane"/>
          <div class="o_setting_right_pane">
            <span class="o_form_label">Default freeform format</span>
            <div class="text-muted">
              Default freeform invoice format
            </div>
            <div class="text-muted">
              <field name="invoice_freeform_selection"/>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
